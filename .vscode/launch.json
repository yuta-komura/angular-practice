{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome", // Chromeブラウザ用デバッグ
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200", // AngularアプリのURL
      "webRoot": "${workspaceFolder}", // プロジェクトのルートディレクトリ
      "sourceMaps": true, // ソースマップを有効化
      "trace": true // デバッグログを有効化
    },
    {
      "type": "msedge", // Edgeブラウザ用デバッグ
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:4200", // AngularアプリのURL
      "webRoot": "${workspaceFolder}", // プロジェクトのルートディレクトリ
      "sourceMaps": true, // ソースマップを有効化
      "trace": true // デバッグログを有効化
    }
  ]
}
